                                    if (newValue!) {
                                      if (FFAppState().isAdult) {
                                        FFAppState().isAdult = true;
                                        safeSetState(() {});
                                      } else {
                                        FFAppState().isAdult = false;
                                        safeSetState(() {});
                                      }

