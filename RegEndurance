/*
main class to establish page 'RegEndurance'
class contains attributes passed to it from the
previous page (RegistrationChoice) that directs
to the endurance registration page which has the 
form fields to hold all the data necessary for a
registration form.
*/
class RegEnduranceWidget extends StatefulWidget {
  const RegEnduranceWidget({
    super.key,
    required this.eventName,  //passed from "Endurance Ride" button on RegistrationChoice page
    bool? ageFieldVisible,   //state variable set by condition of toggle 
    required this.riderAge,  // state variable created on this page
  }) : this.ageFieldVisible = ageFieldVisible ?? false;

  final String? eventName;
  final bool ageFieldVisible;
  final String? riderAge;

  static String routeName = 'RegEndurance';  //variable value passed from RegistrationChoice page
  static String routePath = '/regEndurance'; //URL value passed from RegistrationChoice page

 
 /*
overidden State<RegEnduranceWidget> method createState()  
creates the class _RegEnduranceWidgetState as a child class
derived from the State parent class
 */
  @override
  State<RegEnduranceWidget> createState() => _RegEnduranceWidgetState();
}
/*
_RegEndruanceWidgetState holds the 'state' for this page
The state is the condition of all variable values and is dynamic
Any values that change are registered by the state and will cause the page
to be rebuilt - refreshed to reflect the dynamic changes

withinc _RegEnduranceWidgetState, in instance of the RegEnduranceModel class
is instantiated as _model.  _model is a temporary object to hold the current
state of the page.  _model is used to act upon each widget item on the page and
store the state of that widget. _model contains one attribute called textController 
textFieldFocusNode for each textfield on the page. These are acted upon by the methods
TextEditingController() and FocusNode() respectively.

Each time the page is viewed, this _model is created, used then destroyed (disposed)
*/
class _RegEnduranceWidgetState extends State<RegEnduranceWidget> {
  late RegEnduranceModel _model;

  final scaffoldKey = GlobalKey<ScaffoldState>();

  @override
  void initState() {
    super.initState();
    _model = createModel(context, () => RegEnduranceModel());

    _model.textController1 ??= TextEditingController(text: widget!.eventName);
    _model.textFieldFocusNode1 ??= FocusNode();

    _model.textController2 ??=
        TextEditingController(text: FFAppState().firstName);
    _model.textFieldFocusNode2 ??= FocusNode();

    _model.textController3 ??=
        TextEditingController(text: FFAppState().lastName);
    _model.textFieldFocusNode3 ??= FocusNode();

    _model.textController4 ??= TextEditingController(text: FFAppState().email);
    _model.textFieldFocusNode4 ??= FocusNode();

    _model.textController5 ??= TextEditingController();
    _model.textFieldFocusNode5 ??= FocusNode();

    _model.textController6 ??= TextEditingController();
    _model.textFieldFocusNode6 ??= FocusNode();

    _model.textController7 ??= TextEditingController();
    _model.textFieldFocusNode7 ??= FocusNode();

    _model.switchValue = false;
    _model.textController8 ??= TextEditingController();
    _model.textFieldFocusNode8 ??= FocusNode();

    _model.textController9 ??= TextEditingController();
    _model.textFieldFocusNode9 ??= FocusNode();

    _model.textController10 ??= TextEditingController();
    _model.textFieldFocusNode10 ??= FocusNode();
  }

  @override
  void dispose() {
    _model.dispose();

    super.dispose();
  }
